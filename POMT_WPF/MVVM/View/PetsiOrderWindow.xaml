<Window x:Class="POMT_WPF.MVVM.View.PetsiOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POMT_WPF.MVVM.View.Controls"
        xmlns:helper="clr-namespace:POMT_WPF.MVVM.Other"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="PetsiOrderWindow" Height="720" Width="600">
    
    <Border Background="{StaticResource SecWinPrimary}" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
 
            <Button Click="CloseWindow_ButtonClick" Grid.Row="0"  Style="{StaticResource menuButton}" VerticalAlignment="Bottom" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <Icon:PackIconMaterial Kind="Close" Style="{StaticResource menuButtonIcon}"/>
                </StackPanel>
            </Button>
            <TextBlock Grid.Row="1" Text="Order Form" FontSize="24" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <local:TextFillTextBox Style="{StaticResource textFillTextBox}" TextFill="Recipient ..."/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <RadioButton Style="{StaticResource reportLabelsRadioButtonTheme}" Content="Pickup" Margin="0 5 20 5" Foreground="#efefef"/>
                        <RadioButton Style="{StaticResource reportLabelsRadioButtonTheme}" Content="Delivery" Foreground="#efefef"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <local:TextFillTextBox Style="{StaticResource textFillTextBox}" TextFill="Delivery Address(optional) ..."/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="4">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <local:TextFillTextBox Style="{StaticResource textFillTextBox}" TextFill="Due Date or Frequency ..."/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <local:TextFillTextBox Style="{StaticResource textFillTextBox}" TextFill="DatePicker or FrequencyPicker ..."/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <local:TextFillTextBox Style="{StaticResource textFillTextBox}" TextFill="h ..."/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Label Grid.Row="3" Content="Items" FontSize="18" Foreground="#efefef" Margin="45 20 0 0"/>
            <Separator Grid.Row="4" Width="500"/>
            <Grid Grid.Row="5" Margin="0 10 0 0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="40 0 0 0 ">
                    <DataGrid x:Name="orderFormDataGrid"  
                              BorderBrush="Transparent"
                              RowStyle="{DynamicResource orderFormDataGridRowStyle}" 
                              CellStyle="{DynamicResource orderFormDataGridCellStyle}"
                              ColumnHeaderStyle="{DynamicResource orderFormDataGridColumnHeaderStyle}" 
                              Style="{DynamicResource orderFormGridStyle}" 
                              Height="300" Width="500"
                              ItemsSource="{Binding Items}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Item Name" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <local:TextFillTextBox Text="{Binding ItemName}" Style="{StaticResource orderFormTextFillTextBox}"  TextFill="Item Name ..."/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Amount 3" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <local:TextFillTextBox Text="{Binding Amount3}" Style="{StaticResource orderFormTextFillTextBox}"  TextFill="Amount 3 ..."/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Amount 5" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <local:TextFillTextBox Text="{Binding Amount5}" Style="{StaticResource orderFormTextFillTextBox}" TextFill="Amount 5 ..."/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Amount 8" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <local:TextFillTextBox Text="{Binding Amount8}" Style="{StaticResource orderFormTextFillTextBox}" TextFill="Amount 8 ..."/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Amount 10" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <local:TextFillTextBox Text="{Binding Amount10}" Style="{StaticResource orderFormTextFillTextBox}" TextFill="Amount 10 ..."/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!--<DataGridTextColumn Header="Item Name" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding ItemName}"/>
                            <DataGridTextColumn Header="Amount 3" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Amount3}" />
                            <DataGridTextColumn Header="Amount 5" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Amount5}" />
                            <DataGridTextColumn Header="Amount 8" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Amount8}" />
                            <DataGridTextColumn Header="Amount 10" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Amount10}" />-->
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Click="AddLineItem_BtnClk" Margin="5 0 5 5" Style="{StaticResource secondaryButton}"  Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right">
                        <Icon:PackIconMaterial Kind="Plus"/>
                    </Button>
                </StackPanel>
               
            </Grid>
            <Grid Grid.Row="6">
                <StackPanel Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">
                    <local:TextFillTextBox TextWrapping="Wrap" Style="{StaticResource textFillTextBox}" TextFill="notes ..."/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Button Click="ConfirmCloseWin_BtnClk" Width="80" Margin="0 0 60 0" Style="{StaticResource secondaryButton}" Content="Confirm"/>
                    <Button Click="CloseWindow_ButtonClick" Width="80"  Style="{StaticResource secondaryButton}" Content="Cancel"/>
                    <!--Delete button for pre-existing items if arg(injection) is null gate?-->
                </StackPanel>
            </Grid>
        </Grid>
    </Border>

</Window>
