<Window
    x:Class="POMT_WPF.MVVM.View.AddLabelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:POMT_WPF.MVVM.View.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddLabelWindow"
    Width="500"
    Height="300"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border Background="{StaticResource Charcoal}" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Button
                Grid.Row="0"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="CloseWindow_ButtonClick"
                DockPanel.Dock="Bottom"
                Style="{StaticResource menuButton}">
                <StackPanel Orientation="Horizontal">
                    <Icon:PackIconMaterial Kind="Close" Style="{StaticResource menuButtonIcon}" />
                </StackPanel>
            </Button>
            <Grid Grid.Row="1" Margin="0,25,0,0">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Grid>
                        <ComboBox
                            x:Name="itemNameComboBox"
                            Height="40"
                            IsEditable="True"
                            IsHitTestVisible="False"
                            IsReadOnly="False"
                            LostFocus="itemNameComboBox_LostFocus"
                            SelectionChanged="itemNameComboBox_SelectionChanged"
                            StaysOpenOnEdit="True"
                            Text="{Binding ElementName=ItemNameTextBox, Path=Text}" />
                        <local:TextFillTextBox
                            x:Name="ItemNameTextBox"
                            Background="{StaticResource ColumbiaBlue}"
                            IsReadOnly="{Binding IsReadOnly, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource orderFormItemnameTextFillTextBox}"
                            Text="{Binding ItemName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextChanged="ItemNameTextBox_TextChanged"
                            TextFill="Item Name ..." />
                    </Grid>

                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <local:TextFillTextBox
                            x:Name="standardLabelFilePathBox"
                            IsHitTestVisible="False"
                            Style="{StaticResource textFillTextBox}"
                            Text="{Binding StandardFilePath, UpdateSourceTrigger=PropertyChanged}"
                            TextFill="filepath ..." />
                        <Button
                            Width="125"
                            Margin="0,0,10,0"
                            Click="AddPieFilepath_ButtonClick"
                            Content="Choose Pie Label"
                            Style="{StaticResource secondaryButton}" />
                        <Button
                            x:Name="deleteStandardLabel"
                            Width="40"
                            Margin="0,0,30,0"
                            Background="{StaticResource ChiliRed}"
                            Click="deleteStandardLabel_Click"
                            Style="{StaticResource secondaryButton}">
                            <Icon:PackIconMaterial Kind="Delete" />
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <local:TextFillTextBox
                            x:Name="cutieLabelFilePathBox"
                            IsHitTestVisible="False"
                            Style="{StaticResource textFillTextBox}"
                            Text="{Binding CutieFilePath, UpdateSourceTrigger=PropertyChanged}"
                            TextFill="filepath ..." />
                        <Button
                            Width="125"
                            Margin="0,0,10,0"
                            Click="AddCutieFilepath_ButtonClick"
                            Content="Choose Cutie Label"
                            Style="{StaticResource secondaryButton}" />
                        <Button
                            x:Name="deleteCutieLabel"
                            Width="40"
                            Margin="0,0,30,0"
                            Background="{StaticResource ChiliRed}"
                            Click="deleteCutieLabel_Click"
                            Style="{StaticResource secondaryButton}">
                            <Icon:PackIconMaterial Kind="Delete" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid
                Grid.Row="3"
                Margin="0,25,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal">

                    <Button
                        Width="80"
                        Margin="0,0,60,0"
                        Click="ConfirmCloseWin_BtnClk"
                        Content="Confirm"
                        Style="{StaticResource secondaryButton}" />

                    <Button
                        Width="80"
                        Click="CloseWindow_ButtonClick"
                        Content="Cancel"
                        Style="{StaticResource secondaryButton}" />

                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
